// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum MatchStatus {
  scheduled
  live
  finished
}

enum MatchEventType {
  goal
  yellow_card
  red_card
  substitution
}

model Competition {
  id        String   @id @default(uuid())
  code      String   @unique
  name      String
  season    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  matches   Match[]
}

model Team {
  id         String   @id @default(uuid())
  name       String   @unique
  shortName  String
  city       String?
  logoUrl    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  homeMatches Match[] @relation("HomeTeam")
  awayMatches Match[] @relation("AwayTeam")
  players     Player[]
  matchEvents MatchEvent[]
  matchLineups MatchLineup[]
}

model Match {
  id            String       @id @default(uuid())
  competitionId String
  competition   Competition  @relation(fields: [competitionId], references: [id], onDelete: Restrict)
  round         Int
  kickoffAt     DateTime
  status        MatchStatus
  homeTeamId    String
  homeTeam      Team         @relation("HomeTeam", fields: [homeTeamId], references: [id], onDelete: Restrict)
  awayTeamId    String
  awayTeam      Team         @relation("AwayTeam", fields: [awayTeamId], references: [id], onDelete: Restrict)
  homeScore     Int?
  awayScore     Int?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  events        MatchEvent[]
  lineups       MatchLineup[]

  @@index([competitionId, round])
  @@index([competitionId, kickoffAt])
  @@index([status])
  @@index([homeTeamId])
  @@index([awayTeamId])
}

model Player {
  id        String   @id @default(uuid())
  teamId    String
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Restrict)
  name      String
  number    Int?
  position  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  events    MatchEvent[] @relation("EventPlayer")
  assists   MatchEvent[] @relation("EventAssistPlayer")
  subIns    MatchEvent[] @relation("EventSubInPlayer")
  subOuts   MatchEvent[] @relation("EventSubOutPlayer")
  lineups   MatchLineup[]

  @@index([teamId])
  @@index([name])
}

model MatchEvent {
  id        String         @id @default(uuid())
  matchId   String
  match     Match          @relation(fields: [matchId], references: [id], onDelete: Cascade)
  teamId    String
  team      Team           @relation(fields: [teamId], references: [id], onDelete: Restrict)
  playerId  String
  player    Player         @relation("EventPlayer", fields: [playerId], references: [id], onDelete: Restrict)
  assistPlayerId String?
  assistPlayer   Player?        @relation("EventAssistPlayer", fields: [assistPlayerId], references: [id], onDelete: Restrict)
  subInPlayerId  String?
  subInPlayer    Player?        @relation("EventSubInPlayer", fields: [subInPlayerId], references: [id], onDelete: Restrict)
  subOutPlayerId String?
  subOutPlayer   Player?        @relation("EventSubOutPlayer", fields: [subOutPlayerId], references: [id], onDelete: Restrict)
  type      MatchEventType
  minute    Int
  extraMinute Int?
  createdAt DateTime       @default(now())

  @@index([matchId])
  @@index([teamId])
  @@index([playerId])
  @@index([assistPlayerId])
  @@index([subInPlayerId])
  @@index([subOutPlayerId])
  @@index([type])
}

model MatchLineup {
  id        String   @id @default(uuid())
  matchId   String
  match     Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)
  teamId    String
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Restrict)
  playerId  String
  player    Player   @relation(fields: [playerId], references: [id], onDelete: Restrict)
  isStarter Boolean  @default(false)
  position  String?
  createdAt DateTime @default(now())

  @@unique([matchId, playerId])
  @@index([matchId])
  @@index([teamId])
  @@index([playerId])
}
